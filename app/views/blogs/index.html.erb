<ul class="nav nav-pills" role="tablist">
  <li class="active"><%= link_to 'Articles', blogs_path %></li>
  <li><%= link_to 'New Article', new_blog_path %></li>
</ul>

<p id="notice"><%= notice %></p>

<h1>SV Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.description %></td>
        <td><%= blog.created_at %></td>
        <td><%= link_to 'Show', blog, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog), class: 'btn btn-info btn-xs'  %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>